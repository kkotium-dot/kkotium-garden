import { NextRequest, NextResponse } from 'next/server';
import { createClient } from '@supabase/supabase-js';

const supabase = createClient(
  process.env.NEXT_PUBLIC_SUPABASE_URL!,
  process.env.SUPABASE_SERVICE_ROLE_KEY!
);

// ë„¤ì´ë²„ ìŠ¤ë§ˆíŠ¸ìŠ¤í† ì–´ 2026 ì´ë¯¸ì§€ ê·œê²©
const NAVER_IMAGE_CONFIG = {
  minWidth: 500,
  minHeight: 500,
  recommendedWidth: 1000,
  recommendedHeight: 1000,
  maxSizeMB: 10,
  maxImages: 10,
  validTypes: ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'],
};

export async function POST(request: NextRequest) {
  try {
    const formData = await request.formData();
    const file = formData.get('file') as File;
    const productId = formData.get('productId') as string;
    const isMain = formData.get('isMain') === 'true';
    const altText = formData.get('altText') as string;

    if (!file) {
      return NextResponse.json(
        { success: false, error: 'íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤.' },
        { status: 400 }
      );
    }

    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    console.log('ğŸ“¤ ë„¤ì´ë²„ ì´ë¯¸ì§€ ì—…ë¡œë“œ ì‹œì‘ (2026 ê·œê²©)');
    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    console.log('íŒŒì¼ëª…:', file.name);
    console.log('í¬ê¸°:', (file.size / 1024).toFixed(2), 'KB');
    console.log('íƒ€ì…:', file.type);
    console.log('ë©”ì¸ ì´ë¯¸ì§€:', isMain);

    // 1. íŒŒì¼ í¬ê¸° ê²€ì¦ (10MB)
    if (file.size > NAVER_IMAGE_CONFIG.maxSizeMB * 1024 * 1024) {
      return NextResponse.json(
        { success: false, error: `íŒŒì¼ í¬ê¸°ëŠ” ${NAVER_IMAGE_CONFIG.maxSizeMB}MB ì´í•˜ì—¬ì•¼ í•©ë‹ˆë‹¤.` },
        { status: 400 }
      );
    }

    // 2. íŒŒì¼ í˜•ì‹ ê²€ì¦
    if (!NAVER_IMAGE_CONFIG.validTypes.includes(file.type)) {
      return NextResponse.json(
        { success: false, error: 'JPG, PNG, GIF, WebP í˜•ì‹ë§Œ ì§€ì›ë©ë‹ˆë‹¤.' },
        { status: 400 }
      );
    }

    // 3. íŒŒì¼ëª… ìƒì„± (íƒ€ì„ìŠ¤íƒ¬í”„ + ëœë¤)
    const timestamp = Date.now();
    const random = Math.random().toString(36).substring(7);
    const ext = file.name.split('.').pop();
    const fileName = `${timestamp}-${random}.${ext}`;
    const filePath = productId ? `products/${productId}/${fileName}` : `temp/${fileName}`;

    // 4. Supabase Storage ì—…ë¡œë“œ
    const arrayBuffer = await file.arrayBuffer();
    const buffer = Buffer.from(arrayBuffer);

    const { data, error } = await supabase.storage
      .from('product-images')
      .upload(filePath, buffer, {
        contentType: file.type,
        cacheControl: '3600',
        upsert: false,
      });

    if (error) {
      console.error('âŒ Supabase ì—…ë¡œë“œ ì‹¤íŒ¨:', error);
      return NextResponse.json(
        { success: false, error: error.message },
        { status: 500 }
      );
    }

    // 5. Public URL ìƒì„±
    const { data: urlData } = supabase.storage
      .from('product-images')
      .getPublicUrl(filePath);

    console.log('âœ… ì—…ë¡œë“œ ì™„ë£Œ!');
    console.log('   URL:', urlData.publicUrl);
    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');

    return NextResponse.json({
      success: true,
      url: urlData.publicUrl,
      path: filePath,
      isMain,
      altText: altText || file.name.replace(/\.[^/.]+$/, ''),
      metadata: {
        size: file.size,
        type: file.type,
        name: file.name,
      },
    });
  } catch (error) {
    console.error('âŒ ì—…ë¡œë“œ ì—ëŸ¬:', error);
    return NextResponse.json(
      {
        success: false,
        error: error instanceof Error ? error.message : 'ì•Œ ìˆ˜ ì—†ëŠ” ì—ëŸ¬',
      },
      { status: 500 }
    );
  }
}

// ì´ë¯¸ì§€ ì‚­ì œ API
export async function DELETE(request: NextRequest) {
  try {
    const { searchParams } = new URL(request.url);
    const path = searchParams.get('path');

    if (!path) {
      return NextResponse.json(
        { success: false, error: 'íŒŒì¼ ê²½ë¡œê°€ í•„ìš”í•©ë‹ˆë‹¤.' },
        { status: 400 }
      );
    }

    const { error } = await supabase.storage
      .from('product-images')
      .remove([path]);

    if (error) {
      console.error('âŒ ì‚­ì œ ì‹¤íŒ¨:', error);
      return NextResponse.json(
        { success: false, error: error.message },
        { status: 500 }
      );
    }

    console.log('âœ… ì´ë¯¸ì§€ ì‚­ì œ ì™„ë£Œ:', path);

    return NextResponse.json({ success: true });
  } catch (error) {
    console.error('âŒ ì‚­ì œ ì—ëŸ¬:', error);
    return NextResponse.json(
      {
        success: false,
        error: error instanceof Error ? error.message : 'ì•Œ ìˆ˜ ì—†ëŠ” ì—ëŸ¬',
      },
      { status: 500 }
    );
  }
}
