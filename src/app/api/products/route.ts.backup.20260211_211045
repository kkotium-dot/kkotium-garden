// src/app/api/products/route.ts

import { NextResponse } from 'next/server';
import { prisma } from '@/lib/prisma';

// âœ… POST: ìƒí’ˆ ë“±ë¡ (ìœ ì—°í•œ ê²€ì¦)
export async function POST(request: Request) {
  try {
    const body = await request.json();
    console.log('ğŸ“¦ ìƒí’ˆ ë“±ë¡ ìš”ì²­:', body.name);

    const { supplierId, supplierCode, supplierName, ...productData } = body;

    // Supplier í™•ì¸
    const supplier = await prisma.supplier.findUnique({
      where: { id: supplierId }
    });

    if (!supplier) {
      return NextResponse.json(
        { success: false, error: 'Supplierë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤' },
        { status: 404 }
      );
    }

    console.log('âœ… Supplier í™•ì¸:', supplier.name);

    // User í™•ì¸/ìƒì„± (í…ŒìŠ¤íŠ¸ìš©)
    let user = await prisma.user.findUnique({
      where: { email: 'test@kkotium.com' }
    });

    if (!user) {
      user = await prisma.user.create({
        data: {
          email: 'test@kkotium.com',
          name: 'í…ŒìŠ¤íŠ¸ ê´€ë¦¬ì',
          level: 1,
          exp: 0
        }
      });
      console.log('âœ¨ ë”ë¯¸ User ìƒì„±:', user.id);
    }

    console.log('âœ… User í™•ì¸:', user.name);

    // â­ ë°ì´í„° ì•ˆì „ ì²˜ë¦¬ (ì´ë¯¸ì§€ ì„ íƒì‚¬í•­)
    const safeProductData = {
      ...productData,
      images: productData.images && productData.images.length > 0 
        ? productData.images 
        : [],
      imageAltTexts: productData.imageAltTexts && productData.imageAltTexts.length > 0
        ? productData.imageAltTexts
        : [],
      mainImage: productData.mainImage || null,
      seo_valid: productData.seo_score >= 50, // 50ì  ì´ìƒì´ë©´ valid
    };

    // Product ìƒì„±
    const product = await prisma.product.create({
      data: {
        ...safeProductData,
        supplier: {
          connect: { id: supplierId }
        },
        user: {
          connect: { id: user.id }
        }
      },
      include: {
        supplier: true,
        user: true
      }
    });

    console.log('âœ… ìƒí’ˆ ë“±ë¡ ì„±ê³µ:', product.id);
    console.log(\`   - ì´ë¯¸ì§€: \${product.images?.length || 0}ê°œ\`);
    console.log(\`   - SEO ì ìˆ˜: \${product.seo_score}/100\`);

    return NextResponse.json({
      success: true,
      product,
      message: 'ìƒí’ˆì´ ë“±ë¡ë˜ì—ˆìŠµë‹ˆë‹¤',
    });

  } catch (error: any) {
    console.error('âŒ ìƒí’ˆ ë“±ë¡ ì‹¤íŒ¨:', error);
    return NextResponse.json(
      { 
        success: false, 
        error: 'ìƒí’ˆ ë“±ë¡ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤',
        details: error instanceof Error ? error.message : 'Unknown error'
      },
      { status: 500 }
    );
  }
}

// âœ… GET: ìƒí’ˆ ëª©ë¡ ì¡°íšŒ
export async function GET(request: Request) {
  try {
    const { searchParams } = new URL(request.url);
    const status = searchParams.get('status');

    const products = await prisma.product.findMany({
      where: status ? { status } : undefined,
      include: {
        supplier: true,
        user: true
      },
      orderBy: {
        createdAt: 'desc'
      }
    });

    return NextResponse.json({
      success: true,
      products,
      count: products.length
    });

  } catch (error: any) {
    console.error('âŒ ìƒí’ˆ ì¡°íšŒ ì‹¤íŒ¨:', error);
    return NextResponse.json(
      { 
        success: false, 
        error: 'ìƒí’ˆ ì¡°íšŒì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤',
        details: error instanceof Error ? error.message : 'Unknown error'
      },
      { status: 500 }
    );
  }
}

// âœ… PATCH: ìƒí’ˆ ìˆ˜ì •
export async function PATCH(request: Request) {
  try {
    const body = await request.json();
    const { id, supplierId, ...updateData } = body;

    if (!id) {
      return NextResponse.json(
        { success: false, error: 'ìƒí’ˆ IDê°€ í•„ìš”í•©ë‹ˆë‹¤' },
        { status: 400 }
      );
    }

    const product = await prisma.product.update({
      where: { id },
      data: {
        ...updateData,
        ...(supplierId && {
          supplier: {
            connect: { id: supplierId }
          }
        })
      },
      include: {
        supplier: true,
        user: true
      }
    });

    console.log('âœ… ìƒí’ˆ ìˆ˜ì • ì„±ê³µ:', product.id);

    return NextResponse.json({
      success: true,
      product,
      message: 'ìƒí’ˆì´ ìˆ˜ì •ë˜ì—ˆìŠµë‹ˆë‹¤',
    });

  } catch (error: any) {
    console.error('âŒ ìƒí’ˆ ìˆ˜ì • ì‹¤íŒ¨:', error);
    return NextResponse.json(
      { 
        success: false, 
        error: 'ìƒí’ˆ ìˆ˜ì •ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤',
        details: error instanceof Error ? error.message : 'Unknown error'
      },
      { status: 500 }
    );
  }
}

// âœ… DELETE: ìƒí’ˆ ì‚­ì œ
export async function DELETE(request: Request) {
  try {
    const { searchParams } = new URL(request.url);
    const id = searchParams.get('id');

    if (!id) {
      return NextResponse.json(
        { success: false, error: 'ìƒí’ˆ IDê°€ í•„ìš”í•©ë‹ˆë‹¤' },
        { status: 400 }
      );
    }

    await prisma.product.delete({
      where: { id }
    });

    console.log('âœ… ìƒí’ˆ ì‚­ì œ ì„±ê³µ:', id);

    return NextResponse.json({
      success: true,
      message: 'ìƒí’ˆì´ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤',
    });

  } catch (error: any) {
    console.error('âŒ ìƒí’ˆ ì‚­ì œ ì‹¤íŒ¨:', error);
    return NextResponse.json(
      { 
        success: false, 
        error: 'ìƒí’ˆ ì‚­ì œì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤',
        details: error instanceof Error ? error.message : 'Unknown error'
      },
      { status: 500 }
    );
  }
}
