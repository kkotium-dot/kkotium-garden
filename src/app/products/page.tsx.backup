'use client';

import { useEffect, useState } from 'react';
import { useRouter } from 'next/navigation';
import toast from 'react-hot-toast';

interface Supplier {
  id: string;
  name: string;
  platform: string;
}

interface Product {
  id: string;
  name: string;
  sku: string;
  vendorCode: string | null;
  supplierPrice: number;
  salePrice: number;
  margin: number;
  status: string;
  aiScore: number | null;
  createdAt: string;
  supplier: Supplier;
}

interface ApiResponse {
  success: boolean;
  products: Product[];
  suppliers: Supplier[];
}

type SortField = 'name' | 'salePrice' | 'margin' | 'createdAt';
type SortOrder = 'asc' | 'desc';

export default function ProductsPage() {
  const router = useRouter();
  const [products, setProducts] = useState<Product[]>([]);
  const [suppliers, setSuppliers] = useState<Supplier[]>([]);
  const [isLoading, setIsLoading] = useState(true);

  // 필터 상태
  const [searchQuery, setSearchQuery] = useState('');
  const [selectedSupplier, setSelectedSupplier] = useState<string>('all');
  const [selectedStatus, setSelectedStatus] = useState<string>('all');
  const [minMargin, setMinMargin] = useState<number>(0);
  const [maxMargin, setMaxMargin] = useState<number>(100);

  // 정렬 상태
  const [sortField, setSortField] = useState<SortField>('createdAt');
  const [sortOrder, setSortOrder] = useState<SortOrder>('desc');

  // 페이지네이션
  const [currentPage, setCurrentPage] = useState(1);
  const itemsPerPage = 12;

  useEffect(() => {
    fetchData();
  }, []);

  const fetchData = async () => {
    try {
      setIsLoading(true);

      const [productsRes, suppliersRes] = await Promise.all([
        fetch('/api/products'),
        fetch('/api/suppliers'),
      ]);

      if (!productsRes.ok || !suppliersRes.ok) {
        throw new Error('데이터를 불러오는데 실패했습니다');
      }

      const productsData = await productsRes.json();
      const suppliersData = await suppliersRes.json();

      if (productsData.success && Array.isArray(productsData.products)) {
        setProducts(productsData.products);
      }

      if (suppliersData.success && Array.isArray(suppliersData.suppliers)) {
        setSuppliers(suppliersData.suppliers);
      }
    } catch (error) {
      toast.error('데이터를 불러오는데 실패했습니다');
      console.error(error);
    } finally {
      setIsLoading(false);
    }
  };

  const handleDelete = async (id: string, name: string) => {
    if (!confirm(`"${name}" 상품을 삭제하시겠습니까?`)) {
      return;
    }

    try {
      const res = await fetch(`/api/products/${id}`, {
        method: 'DELETE',
      });

      if (res.ok) {
        toast.success('삭제되었습니다');
        fetchData();
      } else {
        toast.error('삭제 실패');
      }
    } catch (error) {
      toast.error('삭제 중 오류가 발생했습니다');
    }
  };

  // 필터링된 상품 목록
  const filteredProducts = products.filter((product) => {
    // 검색어 필터
    const matchesSearch =
      product.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
      product.sku.toLowerCase().includes(searchQuery.toLowerCase());

    // 공급사 필터
    const matchesSupplier =
      selectedSupplier === 'all' || product.supplier.id === selectedSupplier;

    // 상태 필터
    const matchesStatus =
      selectedStatus === 'all' || product.status === selectedStatus;

    // 마진율 필터
    const matchesMargin =
      product.margin >= minMargin && product.margin <= maxMargin;

    return matchesSearch && matchesSupplier && matchesStatus && matchesMargin;
  });

  // 정렬된 상품 목록
  const sortedProducts = [...filteredProducts].sort((a, b) => {
    let comparison = 0;

    switch (sortField) {
      case 'name':
        comparison = a.name.localeCompare(b.name);
        break;
      case 'salePrice':
        comparison = a.salePrice - b.salePrice;
        break;
      case 'margin':
        comparison = a.margin - b.margin;
        break;
      case 'createdAt':
        comparison =
          new Date(a.createdAt).getTime() - new Date(b.createdAt).getTime();
        break;
    }

    return sortOrder === 'asc' ? comparison : -comparison;
  });

  // 페이지네이션
  const totalPages = Math.ceil(sortedProducts.length / itemsPerPage);
  const paginatedProducts = sortedProducts.slice(
    (currentPage - 1) * itemsPerPage,
    currentPage * itemsPerPage
  );

  const handleSort = (field: SortField) => {
    if (sortField === field) {
      setSortOrder(sortOrder === 'asc' ? 'desc' : 'asc');
    } else {
      setSortField(field);
      setSortOrder('asc');
    }
  };

  const getStatusBadge = (status: string) => {
    const badges: Record<string, { bg: string; text: string; label: string }> =
      {
        todo: { bg: 'bg-gray-100', text: 'text-gray-800', label: '준비중' },
        listing: {
          bg: 'bg-green-100',
          text: 'text-green-800',
          label: '판매중',
        },
        soldout: {
          bg: 'bg-red-100',
          text: 'text-red-800',
          label: '품절',
        },
      };

    const badge = badges[status] || badges.todo;

    return (
      <span
        className={`px-2 py-1 text-xs rounded-full ${badge.bg} ${badge.text}`}
      >
        {badge.label}
      </span>
    );
  };

  if (isLoading) {
    return (
      <div className="flex items-center justify-center h-screen">
        <div className="text-lg">로딩 중...</div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 p-6">
      <div className="max-w-7xl mx-auto">
        {/* 헤더 */}
        <div className="flex justify-between items-center mb-6">
          <h1 className="text-3xl font-bold text-gray-900">
            꽃틔움가든 상품 관리
          </h1>
          <button
            onClick={() => router.push('/products/new')}
            className="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold"
          >
            + 새 상품 등록
          </button>
        </div>

        {/* 필터 & 검색 */}
        <div className="bg-white rounded-lg shadow p-6 mb-6">
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            {/* 검색 */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                검색
              </label>
              <input
                type="text"
                placeholder="상품명 또는 SKU"
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                className="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
              />
            </div>

            {/* 공급사 필터 */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                공급사
              </label>
              <select
                value={selectedSupplier}
                onChange={(e) => setSelectedSupplier(e.target.value)}
                className="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
              >
                <option value="all">전체</option>
                {suppliers.map((supplier) => (
                  <option key={supplier.id} value={supplier.id}>
                    {supplier.name} ({supplier.platform})
                  </option>
                ))}
              </select>
            </div>

            {/* 상태 필터 */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                상태
              </label>
              <select
                value={selectedStatus}
                onChange={(e) => setSelectedStatus(e.target.value)}
                className="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
              >
                <option value="all">전체</option>
                <option value="todo">준비중</option>
                <option value="listing">판매중</option>
                <option value="soldout">품절</option>
              </select>
            </div>

            {/* 마진율 범위 */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                마진율 {minMargin}% - {maxMargin}%
              </label>
              <div className="flex gap-2">
                <input
                  type="number"
                  value={minMargin}
                  onChange={(e) => setMinMargin(Number(e.target.value))}
                  className="w-1/2 px-3 py-2 border rounded-lg"
                  placeholder="최소"
                />
                <input
                  type="number"
                  value={maxMargin}
                  onChange={(e) => setMaxMargin(Number(e.target.value))}
                  className="w-1/2 px-3 py-2 border rounded-lg"
                  placeholder="최대"
                />
              </div>
            </div>
          </div>

          {/* 결과 요약 */}
          <div className="mt-4 pt-4 border-t">
            <p className="text-sm text-gray-600">
              전체 {products.length}개 중 {filteredProducts.length}개 표시
            </p>
          </div>
        </div>

        {/* 정렬 & 테이블 */}
        <div className="bg-white rounded-lg shadow overflow-hidden">
          {/* 정렬 버튼 */}
          <div className="px-6 py-4 bg-gray-50 border-b flex gap-2">
            <button
              onClick={() => handleSort('name')}
              className={`px-3 py-1 text-sm rounded ${
                sortField === 'name'
                  ? 'bg-blue-100 text-blue-700'
                  : 'bg-white text-gray-700'
              }`}
            >
              이름 {sortField === 'name' && (sortOrder === 'asc' ? '↑' : '↓')}
            </button>
            <button
              onClick={() => handleSort('salePrice')}
              className={`px-3 py-1 text-sm rounded ${
                sortField === 'salePrice'
                  ? 'bg-blue-100 text-blue-700'
                  : 'bg-white text-gray-700'
              }`}
            >
              가격{' '}
              {sortField === 'salePrice' && (sortOrder === 'asc' ? '↑' : '↓')}
            </button>
            <button
              onClick={() => handleSort('margin')}
              className={`px-3 py-1 text-sm rounded ${
                sortField === 'margin'
                  ? 'bg-blue-100 text-blue-700'
                  : 'bg-white text-gray-700'
              }`}
            >
              마진율{' '}
              {sortField === 'margin' && (sortOrder === 'asc' ? '↑' : '↓')}
            </button>
            <button
              onClick={() => handleSort('createdAt')}
              className={`px-3 py-1 text-sm rounded ${
                sortField === 'createdAt'
                  ? 'bg-blue-100 text-blue-700'
                  : 'bg-white text-gray-700'
              }`}
            >
              등록일{' '}
              {sortField === 'createdAt' && (sortOrder === 'asc' ? '↑' : '↓')}
            </button>
          </div>

          {/* 테이블 */}
          {paginatedProducts.length === 0 ? (
            <div className="text-center py-12">
              <p className="text-gray-500 mb-4">등록된 상품이 없습니다</p>
              <button
                onClick={() => router.push('/products/new')}
                className="text-blue-600 hover:underline"
              >
                첫 상품 등록하기 →
              </button>
            </div>
          ) : (
            <table className="min-w-full divide-y divide-gray-200">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    상품명
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    SKU
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    공급사
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    판매가
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    원가
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    마진율
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    AI점수
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    상태
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    관리
                  </th>
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {paginatedProducts.map((product) => (
                  <tr key={product.id} className="hover:bg-gray-50">
                    <td className="px-6 py-4 text-sm font-medium text-gray-900">
                      {product.name}
                    </td>
                    <td className="px-6 py-4 text-sm text-gray-500">
                      {product.sku}
                    </td>
                    <td className="px-6 py-4 text-sm text-gray-500">
                      {product.supplier.name}
                    </td>
                    <td className="px-6 py-4 text-sm text-gray-900">
                      {product.salePrice.toLocaleString()}원
                    </td>
                    <td className="px-6 py-4 text-sm text-gray-500">
                      {product.supplierPrice.toLocaleString()}원
                    </td>
                    <td className="px-6 py-4">
                      <span
                        className={`text-sm font-semibold ${
                          product.margin >= 50
                            ? 'text-green-600'
                            : product.margin >= 30
                            ? 'text-yellow-600'
                            : 'text-red-600'
                        }`}
                      >
                        {product.margin.toFixed(1)}%
                      </span>
                    </td>
                    <td className="px-6 py-4 text-sm text-gray-500">
                      {product.aiScore ? `${product.aiScore}점` : '-'}
                    </td>
                    <td className="px-6 py-4">{getStatusBadge(product.status)}</td>
                    <td className="px-6 py-4 text-sm">
                      <button
                        onClick={() => router.push(`/products/${product.id}/edit`)}
                        className="text-blue-600 hover:text-blue-900 mr-3"
                      >
                        수정
                      </button>
                      <button
                        onClick={() => handleDelete(product.id, product.name)}
                        className="text-red-600 hover:text-red-900"
                      >
                        삭제
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          )}

          {/* 페이지네이션 */}
          {totalPages > 1 && (
            <div className="px-6 py-4 bg-gray-50 border-t flex justify-center gap-2">
              <button
                onClick={() => setCurrentPage(Math.max(1, currentPage - 1))}
                disabled={currentPage === 1}
                className="px-3 py-1 rounded bg-white disabled:opacity-50"
              >
                이전
              </button>
              {Array.from({ length: totalPages }, (_, i) => i + 1).map(
                (page) => (
                  <button
                    key={page}
                    onClick={() => setCurrentPage(page)}
                    className={`px-3 py-1 rounded ${
                      currentPage === page
                        ? 'bg-blue-600 text-white'
                        : 'bg-white'
                    }`}
                  >
                    {page}
                  </button>
                )
              )}
              <button
                onClick={() =>
                  setCurrentPage(Math.min(totalPages, currentPage + 1))
                }
                disabled={currentPage === totalPages}
                className="px-3 py-1 rounded bg-white disabled:opacity-50"
              >
                다음
              </button>
            </div>
          )}
        </div>
      </div>
    </div>
  );
}
