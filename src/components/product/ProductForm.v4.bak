'use client';

import { useState, useEffect, useCallback } from 'react';
import { useRouter } from 'next/navigation';
import ImageUploader from '@/components/products/ImageUploader';
import ProductSeoForm from './seo/ProductSeoForm';
import { Save, Loader2, ArrowLeft } from 'lucide-react';
import Link from 'next/link';

interface ProductFormProps {
  initialData?: any;
  onSave?: (data: any) => Promise<void>; // ì‹¤ì œ ì‚¬ìš©ë˜ëŠ” props
  loading?: boolean;
  mode?: string; // 'create' | 'edit'
}

interface SafeSeoFields {
  title: string;
  description: string;
  keywords: string;
  naver_title: string;
  naver_description: string;
  og_image: string;
  seo_score: number;
  seo_valid: boolean;
}

export default function ProductForm({ 
  initialData = {}, 
  onSave,
  loading = false, 
  mode = 'create'
}: ProductFormProps) {
  const router = useRouter();

  // ì•ˆì „í•œ ì´ˆê¸°ê°’ - ì‹¤ì œ DB í•„ë“œ ë§¤í•‘
  const getSafeInitialData = (data: any) => ({
    name: String(data?.name || ''),
    salePrice: String(data?.salePrice || ''),
    supplierPrice: String(data?.supplierPrice || ''),
    shippingFee: String(data?.shippingFee || ''),
    category: String(data?.category || ''),
    status: String(data?.status || 'draft'),
    sku: String(data?.sku || ''),
    supplierId: String(data?.supplierId || ''),
    images: Array.isArray(data?.images) ? data.images : [],
    imageAltTexts: Array.isArray(data?.imageAltTexts) ? data.imageAltTexts : [],
    naver_title: String(data?.naver_title || ''),
    naver_keywords: String(data?.naver_keywords || ''),
    naver_description: String(data?.naver_description || ''),
    // ... ê¸°íƒ€ ë„¤ì´ë²„ í•„ë“œë“¤
  });

  const getSafeSeoData = (data: any): SafeSeoFields => ({
    title: String(data?.title || '').slice(0, 200),
    description: String(data?.description || '').slice(0, 500),
    keywords: String(data?.keywords || '').slice(0, 200),
    naver_title: String(data?.naver_title || '').slice(0, 200),
    naver_description: String(data?.naver_description || '').slice(0, 500),
    og_image: String(data?.og_image || data?.mainImage || ''),
    seo_score: Number(data?.seo_score || 0),
    seo_valid: Boolean(data?.seo_valid),
  });

  const [formData, setFormData] = useState(getSafeInitialData(initialData));
  const [seoFields, setSeoFields] = useState<SafeSeoFields>(getSafeSeoData(initialData));
  const [activeTab, setActiveTab] = useState<'basic' | 'images' | 'seo'>('basic');
  const [images, setImages] = useState<Array<{ url: string; isMain: boolean; altText: string }>>(Array.isArray(initialData?.images) ? initialData.images.map((url: string, i: number) => ({
    url, isMain: i === 0, altText: ''
  })) : []);

  // margin ì‹¤ì‹œê°„ ê³„ì‚°
  const calculateMargin = useCallback(() => {
    const sale = parseFloat(formData.salePrice) || 0;
    const supplier = parseFloat(formData.supplierPrice) || 0;
    return sale > 0 ? ((sale - supplier) / sale * 100).toFixed(1) : '0.0';
  }, [formData.salePrice, formData.supplierPrice]);

  // SEO ê²€ì¦ ê°œì„ 
  const validateSeo = useCallback(() => {
    let score = 0;
    const titleLen = String(seoFields.title || '').length;
    const descLen = String(seoFields.description || '').length;
    const kwList = (seoFields.keywords || '').split(',').map(k => k.trim()).filter(Boolean);
    const naverTitleLen = String(seoFields.naver_title || '').length;
    const naverDescLen = String(seoFields.naver_description || '').length;

    if (titleLen >= 10 && titleLen <= 60) score += 20;
    if (descLen >= 50 && descLen <= 160) score += 25;
    if (kwList.length >= 3 && kwList.length <= 10) score += 15;
    if (naverTitleLen >= 10 && naverTitleLen <= 60) score += 20;
    if (naverDescLen >= 50 && naverDescLen <= 1000) score += 20;

    const valid = score >= 80;
    setSeoFields(prev => ({ ...prev, seo_score: score, seo_valid: valid }));
    return { valid, score };
  }, [seoFields]);

  const updateSeoFields = useCallback((updates: Partial<SafeSeoFields>) => {
    const newSeo = {
      ...seoFields,
      ...updates,
      title: String(updates.title || seoFields.title).slice(0, 200),
      description: String(updates.description || seoFields.description).slice(0, 500),
      keywords: String(updates.keywords || seoFields.keywords).slice(0, 200),
      naver_title: String(updates.naver_title || seoFields.naver_title).slice(0, 200),
      naver_description: String(updates.naver_description || seoFields.naver_description).slice(0, 500),
    };
    setSeoFields(newSeo);
    validateSeo();
  }, [seoFields, validateSeo]);

  const updateFormData = useCallback((updates: any) => {
    setFormData(prev => ({ ...prev, ...updates }));
  }, []);

  // ImageUploader ì½œë°±ë“¤ - í•µì‹¬ ìˆ˜ì •!
  const handleImageUploadSuccess = useCallback((imageData: { url: string; isMain: boolean; altText: string }) => {
    setImages(prev => [...prev, imageData]);
    console.log('âœ… ì´ë¯¸ì§€ ì—…ë¡œë“œ ì„±ê³µ:', imageData);
  }, []);

  const handleImageDeleteSuccess = useCallback((url: string) => {
    setImages(prev => prev.filter(img => img.url !== url));
  }, []);

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();

    if (!formData.name.trim()) {
      alert('ìƒí’ˆëª…ì„ ì…ë ¥í•´ì£¼ì„¸ìš”');
      setActiveTab('basic');
      return;
    }

    const seoResult = validateSeo();
    if (!seoResult.valid) {
      alert(`SEO ì ìˆ˜ ${seoResult.score}/100ì  (80ì  ì´ìƒ í•„ìš”)`);
      setActiveTab('seo');
      return;
    }

    // margin ê³„ì‚°í•´ì„œ ì¶”ê°€ - í•µì‹¬!
    const margin = parseFloat(calculateMargin()) || 0;

    const submitData = {
      ...formData,
      images, // ì—…ë¡œë“œëœ ì´ë¯¸ì§€ ë°°ì—´
      imageAltTexts: images.map(img => img.altText),
      // ë„¤ì´ë²„ í•„ë“œ ë§¤í•‘
      naver_title: seoFields.naver_title,
      naver_keywords: seoFields.keywords,
      naver_description: seoFields.naver_description,
      // í•„ìˆ˜ margin ì¶”ê°€!
      margin,
      seo_score: seoResult.score,
      seo_valid: true,
    };

    console.log('ğŸ“¤ ì œì¶œ ë°ì´í„°:', submitData);

    if (onSave) {
      try {
        await onSave(submitData);
        alert(mode === 'create' ? 'âœ… ìƒí’ˆ ë“±ë¡ ì™„ë£Œ!' : 'âœ… ìƒí’ˆ ìˆ˜ì • ì™„ë£Œ!');
        router.push('/products/sourced');
      } catch (error) {
        console.error('âŒ ì €ì¥ ì‹¤íŒ¨:', error);
        alert('ì €ì¥ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
      }
    } else {
      // ì‹¤ì œ API í˜¸ì¶œ (onSave ì—†ì„ ë•Œ)
      const res = await fetch('/api/products', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(submitData),
      });
      const data = await res.json();

      if (data.success) {
        alert(mode === 'create' ? 'âœ… ìƒí’ˆ ë“±ë¡ ì™„ë£Œ!' : 'âœ… ìƒí’ˆ ìˆ˜ì • ì™„ë£Œ!');
        router.push('/products/sourced');
        router.refresh(); // ëª©ë¡ ìƒˆë¡œê³ ì¹¨
      } else {
        alert(`âŒ ${data.error}`);
        console.error('API ì—ëŸ¬:', data.details);
      }
    }
  };

  // ì´ˆê¸° ë¡œë“œ
  useEffect(() => {
    validateSeo();
  }, []);

  const isFormValid = formData.name.trim() && seoFields.seo_valid;

  return (
    <form onSubmit={handleSubmit} className="max-w-4xl mx-auto space-y-8 p-6">
      {/* í—¤ë” */}
      <div className="flex items-center justify-between">
        <h1 className="text-2xl font-bold text-gray-900">
          {mode === 'create' ? 'ìƒí’ˆ ë“±ë¡' : 'ìƒí’ˆ ìˆ˜ì •'}
        </h1>
        <div className={`px-4 py-2 rounded-full text-sm font-semibold ${
          seoFields.seo_valid 
            ? 'bg-green-100 text-green-800' 
            : 'bg-yellow-100 text-yellow-800'
        }`}>
          SEO {seoFields.seo_score}/100
        </div>
      </div>

      {/* íƒ­ ë„¤ë¹„ */}
      <div className="border-b border-gray-200">
        <nav className="-mb-px flex space-x-8">
          {[
            { key: 'basic' as const, label: 'ê¸°ë³¸ì •ë³´' },
            { key: 'images' as const, label: 'ì´ë¯¸ì§€' },
            { key: 'seo' as const, label: `SEO ${seoFields.seo_score}/100` }
          ].map(({ key, label }) => (
            <button
              key={key}
              type="button"
              onClick={() => setActiveTab(key)}
              className={`py-3 px-4 border-b-2 font-medium whitespace-nowrap ${
                activeTab === key
                  ? 'border-pink-500 text-pink-600'
                  : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
              }`}
            >
              {label}
            </button>
          ))}
        </nav>
      </div>

      {/* íƒ­ ì½˜í…ì¸  */}
      {activeTab === 'basic' && (
        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <div>
            <label className="block text-sm font-semibold text-gray-900 mb-2">ìƒí’ˆëª… *</label>
            <input
              type="text"
              value={formData.name}
              onChange={(e) => updateFormData({ name: e.target.value })}
              className="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-pink-500 focus:border-pink-500"
              placeholder="ìƒí’ˆ ì´ë¦„ì„ ì…ë ¥í•˜ì„¸ìš”"
            />
          </div>

          <div className="grid grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-semibold text-gray-900 mb-2">íŒë§¤ê°€</label>
              <input
                type="number"
                value={formData.salePrice}
                onChange={(e) => updateFormData({ salePrice: e.target.value })}
                className="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-pink-500"
              />
            </div>
            <div>
              <label className="block text-sm font-semibold text-gray-900 mb-2">ê³µê¸‰ê°€</label>
              <input
                type="number"
                value={formData.supplierPrice}
                onChange={(e) => updateFormData({ supplierPrice: e.target.value })}
                className="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-pink-500"
              />
              <div className="text-xs text-green-600 mt-1 font-medium">
                ë§ˆì§„ìœ¨: {calculateMargin()}%
              </div>
            </div>
          </div>

          <div className="lg:col-span-2">
            <label className="block text-sm font-semibold text-gray-900 mb-2">ì¹´í…Œê³ ë¦¬</label>
            <input
              type="text"
              value={formData.category}
              onChange={(e) => updateFormData({ category: e.target.value })}
              className="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-pink-500"
              placeholder="ì˜ˆ: ê½ƒë‹¤ë°œ/ì¥ë¯¸"
            />
          </div>
        </div>
      )}

      {activeTab === 'images' && (
        <div className="p-6 bg-gradient-to-br from-pink-50/50 to-purple-50/50 rounded-2xl border-2 border-dashed border-pink-200">
          <ImageUploader
            existingImages={images}
            onUploadSuccess={handleImageUploadSuccess}
            onDeleteSuccess={handleImageDeleteSuccess}
            maxImages={10}
          />
        </div>
      )}

      {activeTab === 'seo' && (
        <div className="p-8 bg-gradient-to-br from-pink-50 to-purple-50 rounded-2xl border border-pink-100">
          <ProductSeoForm 
            seoData={seoFields}
            onSeoChange={updateSeoFields}
          />
        </div>
      )}

      {/* í•˜ë‹¨ ë²„íŠ¼ */}
      <div className="pt-8 border-t border-gray-200 flex justify-end gap-4 bg-white rounded-xl p-6 shadow-sm">
        <Link 
          href="/products/sourced"
          className="px-8 py-3 border border-gray-300 rounded-xl hover:bg-gray-50 font-semibold transition-all flex items-center gap-2"
        >
          <ArrowLeft className="w-5 h-5" />
          ëª©ë¡ìœ¼ë¡œ
        </Link>
        <button
          type="submit"
          disabled={loading || !isFormValid}
          className={`px-10 py-3 rounded-xl font-bold text-lg flex items-center gap-3 transition-all shadow-lg ${
            isFormValid && !loading
              ? 'bg-gradient-to-r from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700 text-white hover:shadow-2xl hover:-translate-y-1'
              : 'bg-gray-300 text-gray-500 cursor-not-allowed'
          }`}
        >
          {loading ? (
            <>
              <Loader2 className="w-6 h-6 animate-spin" />
              ì €ì¥ ì¤‘...
            </>
          ) : (
            <>
              <Save className="w-6 h-6" />
              {mode === 'create' ? 'ìƒí’ˆ ë“±ë¡í•˜ê¸°' : 'ìˆ˜ì • ì™„ë£Œ'}
            </>
          )}
        </button>
      </div>
    </form>
  );
}
