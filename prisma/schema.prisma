generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id              Int       @id @default(autoincrement())
  name            String
  price           Int
  originalPrice   Int?
  imageUrl        String?
  productUrl      String?
  category        String?
  vendorName      String?
  sku             String?   @unique
  vendorCode      String?
  status          String    @default("todo")
  aiScore         Int?
  crawledData     Json?
  substituteUrl   String?
  substituteMemo  String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
